{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build C",
            "type": "shell",
            "command": "C:/cygwin64/bin/bash.exe",
            "args": [
                "--login",
                "-c",
                "cd '${fileDirname}' && gcc -Wall -Wextra -g3 '${fileBasename}' -o '${fileBasenameNoExtension}.exe'"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "presentation": {
                "clear": true
            }
        }
    ]
}